{
  "manifest_version": 3,
  "name": "Auction Bid Scraper",
  "version": "0.1.0",
  "description": "Scrape Facebook post comments for bids and send to Auction Tracker.",
  "action": {
    "default_title": "Auction Bid Scraper"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/groups/*/posts/*",
        "https://www.facebook.com/groups/*/permalink/*",
        "https://m.facebook.com/groups/*/permalink/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
}
