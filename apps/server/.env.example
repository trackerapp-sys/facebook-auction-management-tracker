# Facebook Auction Tracker - Server Environment Example
# --------------------------------------------------
# Copy this file to .env and fill in the required values.
# DO NOT commit real secrets.

# Core Facebook app credentials
FACEBOOK_APP_ID=1347679723547415
FACEBOOK_APP_SECRET=

# Web/app origins
# Frontend origin (new UI)
CLIENT_ORIGIN=https://facebook-group-auction-tracker-app.onrender.com
# Public base URL of this API
SERVER_BASE_URL=https://facebook-auction-api.onrender.com

# Sessions
SESSION_SECRET=replace-with-strong-secret

# OAuth scopes
# Keep as-is unless you have a specific override; these enable Page webhook flows
FACEBOOK_OAUTH_SCOPES=public_profile,pages_show_list,pages_manage_metadata,pages_read_engagement

# Webhook verify token (any random string; must match value configured in Facebook Webhooks settings)
FACEBOOK_WEBHOOK_VERIFY_TOKEN=replace-with-random-verify-token

# Optional CORS overrides (comma-separated list), only if you have additional frontends
CORS_ADDITIONAL_ORIGINS=

# Optional: only required if using extension ingest endpoint
INGEST_TOKEN=replace-with-random-long-token

